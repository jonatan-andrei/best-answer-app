<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="top|center"
    tools:context=".fragment.HomeFragment"
app:rowCount="3"
app:columnCount="1">

<TextView
    android:id="@+id/textBemVindo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/jomhuriaregular"
    android:font="@font/jomhuriaregular"
    android:gravity="center_horizontal"
    android:text="@string/mensagem_bem_vindo"
    android:textAlignment="center"
    android:textColor="@color/primary_dark"
    android:textSize="@dimen/fonte_textos_apresentacao"
    android:layout_marginLeft="@dimen/margem_pagina_sobre"
    android:layout_marginRight="@dimen/margem_pagina_sobre"
    android:layout_marginTop="@dimen/margem_pagina_sobre"
    app:layout_column="0"
    app:layout_row="0" />

<TextView
    android:id="@+id/textSobre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/jomhuriaregular"
    android:font="@font/jomhuriaregular"
    android:gravity="center_horizontal"
    android:text="@string/mensagem_sobre"
    android:textAlignment="center"
    android:textColor="@color/primary_dark"
    android:textSize="@dimen/fonte_textos_apresentacao"
    android:layout_marginLeft="@dimen/margem_pagina_sobre"
    android:layout_marginRight="@dimen/margem_pagina_sobre"
    android:layout_marginBottom="@dimen/margem_padrao"
    app:layout_column="0"
    app:layout_row="1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_column="0"
        app:layout_row="2"
        app:srcCompat="@drawable/bestanswerlogocomfundo" />

</androidx.gridlayout.widget.GridLayout>