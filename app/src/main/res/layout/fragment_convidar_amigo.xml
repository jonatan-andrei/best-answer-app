<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    tools:context=".fragment.ConvidarAmigoFragment"
    app:rowCount="3"
    app:columnCount="1">

    <TextView
        android:id="@+id/textoConvidarAmigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotolight"
        android:font="@font/robotolight"
        android:gravity="center_horizontal"
        android:text="@string/convidar_amigo"
        android:textAlignment="center"
        android:textSize="@dimen/fonte_titulo_pagina_convidar"
        android:layout_marginLeft="@dimen/margem_padrao"
        android:layout_marginRight="@dimen/margem_padrao"
        android:layout_marginTop="@dimen/margem_padrao"
        android:layout_marginBottom="@dimen/margem_padrao"
        app:layout_column="0"
        app:layout_row="0" />

    <EditText
        android:id="@+id/emailAmigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/robotolight"
        android:font="@font/robotolight"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:layout_column="0"
        app:layout_row="1" />

    <Button
        android:id="@+id/botaoConvidarAmigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convidar"
        android:layout_marginLeft="@dimen/margem_conteudo"
        android:layout_marginRight="@dimen/margem_conteudo"
        android:layout_marginTop="@dimen/margem_conteudo"
        android:layout_marginBottom="@dimen/margem_conteudo"
        app:layout_column="0"
        app:layout_row="2"
        style="@style/botao"/>

</androidx.gridlayout.widget.GridLayout>